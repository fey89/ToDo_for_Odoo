<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- -->
		<record id="view_form_todo_task_inherited" model="ir.ui.view">
			<field name="name">Todo Task form - User Extension</field>
			<field name="model">todo.task</field>
			<field name="inherit_id" ref="todo_app.view_form_todo_task"></field>
			<field name="arch" type="xml">
				<field name="name" position="after">
					<field name="user_id"></field>
				</field>
				<field name="is_done" position="before">
					<field name="date_deadline"></field>
				</field>
				<field name="name" position="attributes">
					<attribute name="string">I have to...</attribute>
				</field>
				<sheet position="after">
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"></field>
						<field name="message_ids" widget="mail_thread"></field>
					</div>
				</sheet>
			</field>
		</record>


		<record id="view_tree_todo_task_inherited" model="ir.ui.view">
			<field name="name">Todo Task tree - User extension</field>
			<field name="model">todo.task</field>
			<field name="inherit_id" ref="todo_app.view_tree_todo_task"></field>
			<field name="arch" type="xml">
				<field name="name" position="after">
					<field name="user_id" />
				</field>
			</field>
		</record>


		<record id="view_filter_todo_task_inherited" model="ir.ui.view">
			<field name="name">Todo Task Tree - User extension</field>
			<field name="model">todo.task</field>
			<field name="inherit_id" ref="todo_app.view_filter_todo_task"></field>
			<field name="arch" type="xml">
				<field name="name" position="after">
					<field name="user_id"></field>
					<filter name="filter_my_tasks" string="My Tasks"
						domain="[('user_id','in',[uid,False])]"></filter>
					<filter name="filter_not_assigned" string="Not Assigned"
						domain="[('user_id','=',False)]">
					</filter>
				</field>
			</field>
		</record>

		<record id="todo_app.menu_todo_task" model="ir.ui.menu">
			<field name="name">My Todo</field>
		</record>
		
		<record model="ir.actions.act_window" id="todo_app.action_todo_task">
			<field name="context">{'search_default_filter_my_tasks':True}</field>
		</record>
		
	</data>
</openerp>